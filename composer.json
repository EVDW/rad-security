{
    "name": "knplabs/rad-security",
    "description": "Provide RAD security components",
    "license": "MIT",
    "authors": [
        {
            "name": "KNP Labs",
            "email": "hello@knplabs.com"
        }
    ],
    "require": {
        "symfony/security-bundle": "~3.4||~4.3||~5.1"
    },
    "require-dev": {
        "php": ">=7.0.8",
        "bossa/phpspec2-expect": "~2.0||~3.0",
        "pedrotroller/php-cs-custom-fixer": "~2.17",
        "phpspec/phpspec": "~4.0||~5.0||~6.0",
        "symfony/dependency-injection": "~3.4||~4.3||~5.1",
        "symfony/event-dispatcher": "~3.4||~4.3||~5.1"
    },
    "suggest": {
        "knplabs/rad-resource-resolver": "Allows to check authorization against resources resolved from the routing."
    },
    "autoload": {
        "psr-4": {
            "Knp\\Rad\\Security\\": "src/Knp/Rad/Security/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
